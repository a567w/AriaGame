//===============================================================================================//
inline void KsVector2d::scaleTo( KsReal len )
{
	KsReal	len2 = length2();

	if( (len2 > ksTOLERANCE) && (KsFabs( len2 - (len*len) ) > ksTOLERANCE) )
	{
		KsReal	factor = ( len / KsSqrt( len2 ) );

		x *= factor;
		y *= factor;
	}
}

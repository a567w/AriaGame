//===============================================================================================//
// ê≥ãKâª
//===============================================================================================//
inline void KsVector2d::normalize()
{
	KsReal	norm = x*x + y*y;

	if( ( KsFabs( norm - 1.0f ) < ksTOLERANCE ) || ( norm < ksTOLERANCE2 ) ){
		return;
	}

	KsReal invNorm = 1.0f / KsSqrt( norm );

	x *= invNorm;
	y *= invNorm;
}
